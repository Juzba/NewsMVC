@{ ViewData["Title"] = "Delete";
}

@model New


<div>
	<h1>Smazat</h1>

    <table class="table table-dark w-50">
        <tr>
            <td>Id</td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>Autor</td>
            <td>@Model.Autor</td>
        </tr>
        <tr>
            <td>Název</td>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <td>Datum</td>
            <td>@Model.DateT</td>
        </tr>
        <tr>
            <td>Text</td>
            <td>@Model.Text</td>
        </tr>
        <tr>
            <td>Připnuto?</td>
            <td>@Model.IsOnTop</td>
        </tr>
    </table>

    <div class="d-flex gap-1">
        <a asp-action="News" asp-controller="News" class="btn btn-outline-info">Zpět na News</a>
        <form asp-action="DeletePost" asp-route-id="@Model.Id" method="post">
            <button class="btn btn-outline-danger" type="submit">Smazat</button>
        </form>
    </div>

</div>