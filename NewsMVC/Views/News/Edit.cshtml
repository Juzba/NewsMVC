@{
	ViewData["Title"] = "Edit";
}
@model New


<div>
	<h1 class="text-center m-5">Přidat Novinku.</h1>

	<form asp-action="Edit" method="post" class="w-50 mx-auto">

		<div class="form-floating mb-3">
			<input type="text" asp-for="Title" class="form-control" id="inp1" placeholder="Název">
			<label for="inp1">Název</label>
		</div>
		<div class="form-floating mb-3">
			<input type="text" asp-for="Text" class="form-control" id="inp2" placeholder="Text">
			<label for="inp2">Text</label>
		</div>
		<div class="form-check">
			<input type="checkbox" asp-for="IsOnTop" class="form-check-input" value="" id="flexCheckDefault">
			<label class="form-check-label" for="flexCheckDefault">
				Připnout?
			</label>
		</div>
		<button class="btn btn-outline-info" type="submit">Odeslat</button>










	</form>




















</div>


